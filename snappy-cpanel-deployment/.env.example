# Environment Configuration Template
NODE_ENV=production
PORT=5001

# Database Configuration (CHANGE THESE VALUES)
MONGO_URI=mongodb+srv://YOUR_DB_USER:YOUR_STRONG_PASSWORD@your-cluster.mongodb.net/snappy-production?retryWrites=true&w=majority

# JWT Configuration (GENERATE NEW SECRET)
JWT_SECRET=REPLACE_WITH_CRYPTO_SECURE_64_BYTE_HEX_STRING
JWT_EXPIRE=30d

# Email Configuration (USE PRODUCTION EMAIL SERVICE)
EMAIL_HOST=smtp.your-email-provider.com
EMAIL_PORT=587
EMAIL_USER=your-production-email@yourdomain.com
EMAIL_PASS=your-app-specific-password

# Frontend URL (YOUR PRODUCTION DOMAIN)
FRONTEND_URL=https://yourdomain.com

# Payment Configuration
DEFAULT_CURRENCY=ZAR
PAYMENT_TIMEOUT=600000
MAX_PAYMENT_ATTEMPTS=3

# Paystack Configuration (USE PRODUCTION KEYS)
PAYSTACK_SECRET_KEY=sk_live_YOUR_LIVE_SECRET_KEY
PAYSTACK_PUBLIC_KEY=pk_live_YOUR_LIVE_PUBLIC_KEY
PAYSTACK_BASE_URL=https://api.paystack.co
PAYSTACK_WEBHOOK_SECRET=your_webhook_secret_from_paystack

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=ANOTHER_CRYPTO_SECURE_SECRET

# Monitoring (Optional)
SENTRY_DSN=your_sentry_dsn_here
LOG_LEVEL=error
